---
extends: default

ignore: |
  /.gradle/

rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 1
    max-spaces-inside-empty: 1

  brackets:
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 1
    max-spaces-inside-empty: 1

  comments-indentation: disable

  document-start: disable

  line-length: disable

  truthy: disable